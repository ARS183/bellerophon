FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 87.0;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    sides
    {
        type            zeroGradient;
    }
    wing
    {
        type            epsilonWallFunction;
        value           uniform 1e-11;
    }

    "inner|outer"
    {
        type            bellerophon;
        forceInterpolation true;
        bound           true;
        value           $internalField;
    }
}


