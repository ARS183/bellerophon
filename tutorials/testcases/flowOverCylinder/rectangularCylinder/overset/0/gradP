FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    location    "0";
    object      gradP;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -2 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    cylinder
    {
        type            zeroGradient;
    }
    inner
    {
        type            bellerophon;
        value           uniform (0 0 0);
    }
    outer
    {
        type            bellerophon;
        value           uniform (0 0 0);
    }
    inlet
    {
        type            zeroGradient;
    }
    outlet
    {
        type            zeroGradient;
    }
    sides
    {
        type            zeroGradient;
    }
    frontAndBack
    {
        type            empty;
    }
}


