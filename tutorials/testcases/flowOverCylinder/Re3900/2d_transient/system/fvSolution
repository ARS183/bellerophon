FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "U(Final)?"
    {
        solver          bellerophonPBiCG;
        preconditioner  DILU;
        tolerance       1e-07;
        relTol          1e-04;
    }
    "p(Final)?"
    {
        solver          bellerophonPBiCG;
        preconditioner  DILU;
        tolerance       1e-07;
        relTol          1e-02;
    }

    "k|omega|epsilon|yPsi"
    {
        $p;
        tolerance       1e-08;
        relTol          1e-05;
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors 0;
    nCorrectors 1;
    nOuterCorrectors 1;
}

relaxationFactors
{
    p       0.1;
    U       0.3;
    k       0.7;
    omega   0.7;
}

