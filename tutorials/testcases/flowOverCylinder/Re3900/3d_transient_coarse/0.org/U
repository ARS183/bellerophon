FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (3.9 0 0);

boundaryField
{
    cylinder
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    inner
    {
        type            bellerophon;
        value           $internalField;
    }
    "front|back"
    {
        type            cyclic;
    }

    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    sides
    {
        type            fixedValue;
        value           $internalField;
    }

    outer
    {
        type            bellerophon;
        value           $internalField;
    }

}


// ************************************************************************* //
