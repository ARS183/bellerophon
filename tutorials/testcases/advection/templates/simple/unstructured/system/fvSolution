solvers
{
    p
    {
        solver          bellerophonPBiCG;
        preconditioner  DILU;
        tolerance       1e-08;
        relTol          1e-03;
    }

    pFinal
    {
        $p
        tolerance       1e-06;
        relTol          1e-04;
    }

    T
    {
        solver          bellerophonPBiCG;
        preconditioner  DILU;
        tolerance       1e-09;
        relTol          0;
    }

    "U|UFinal"
    {
        $p;
        tolerance       1e-09;
        relTol          1e-05;
    }
}
