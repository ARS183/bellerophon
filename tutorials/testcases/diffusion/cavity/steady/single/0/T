FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    leftAndRight
    {
        type            zeroGradient;
    }
    top
    {
        type            fixedValue;
        value           uniform 3;
    }
    bottom
    {
        type            fixedValue;
        value           uniform 0;
    }
    frontAndBack
    {
        type            empty;
    }
    lowerBellerophon
    {
        type            bellerophon;
    }
    upperBellerophon
    {
        type            bellerophon;
    }
}


